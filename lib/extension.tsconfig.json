{
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "exclude": ["node_modules"]
}
